{
  "name": "pdei-exocortex",
  "displayName": "P.DE.I Exocortex",
  "description": "Connect VS Code to your Personal Data-driven Exocortex",
  "version": "1.0.0",
  "publisher": "JamesTheGiblet",
  "repository": {
    "type": "git",
    "url": "https://github.com/readme-hub/P.DE.I-framework"
  },
  "icon": "media/icon.png",
  "engines": {
    "vscode": "^1.80.0"
  },
  "categories": [
    "AI",
    "Programming Languages"
  ],
  "activationEvents": [
    "onView:pdei.chatView"
  ],
  "main": "./extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "pdei-sidebar",
          "title": "P.DE.I Exocortex",
          "icon": "media/icon.svg"
        }
      ]
    },
    "views": {
      "pdei-sidebar": [
        {
          "type": "webview",
          "id": "pdei.chatView",
          "name": "Exocortex Chat"
        }
      ]
    },
    "commands": [
      {
        "command": "pdei.ask",
        "title": "Ask Exocortex"
      }
    ],
    "keybindings": [
      {
        "command": "pdei.ask",
        "key": "ctrl+shift+q",
        "mac": "cmd+shift+q",
        "when": "editorTextFocus"
      }
    ]
  },
  "devDependencies": {
    "@types/vscode": "^1.80.0"
  }
}